{
  "name": "shopify-node-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "update-env": "ts-node _developer/update-env.ts",
    "dev": "cross-env NODE_ENV=development nodemon server/index.ts --ignore client/ --ignore dist/ --ignore server/index.ts",
    "build": "tsc && vite build --config=./client/vite.config.ts",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "update-toml": "ts-node _developer/update-toml.ts",
    "predev": "npm run update-toml",
    "deploy": "shopify app deploy --config shopify.app.toml"
  },
  "dependencies": {
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/polaris": "^13.9.2",
    "@shopify/shopify-api": "^11.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
  },
  "workspaces": [
    "server",
    "client"
  ],
